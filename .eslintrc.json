{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "max-len": ["error", 120],
    "linebreak-style": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "spaced-comment": 0,
    "no-console": "off",
    "no-underscore-dangle": 0,
    "no-unused-expressions": 0,
    "no-confusing-arrow": 0,
    "react/prop-types": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}